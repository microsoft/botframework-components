{
  "type": "AdaptiveCard",
  "id": "MenuItemCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${if(Data.Name == null, '', Data.Name)} ${if(Data.Price == null, '', Data.Price)}",
                  "weight": "Bolder"
                }
              ]
            }
          ]
        },
        {
          "type": "TextBlock",
          "text": "${if(Data.Description == null, '', Data.Description)}",
          "wrap": true,
          "horizontalAlignment": "Left",
          "spacing": "None"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
