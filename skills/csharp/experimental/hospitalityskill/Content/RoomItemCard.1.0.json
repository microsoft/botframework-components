{
  "type": "AdaptiveCard",
  "version": "1.0",
  "id": "RoomItemCard",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "${if(Data.Quantity == null, '', Data.Quantity)}",
              "horizontalAlignment": "Center"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "${if(Data.Item == null, '', Data.Item)}"
            }
          ],
          "width": "stretch"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
}
