{
  "type": "AdaptiveCard",
  "id": "FoodItemCard",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "${if(Data.Quantity == null, '', Data.Quantity)}",
              "horizontalAlignment": "Center"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "${if(Data.Name == null, '', Data.Name)}"
            },
            {
              "type": "TextBlock",
              "text": "${if(Data.SpecialRequest == null, '', Data.SpecialRequest)}",
              "spacing": "None"
            }
          ],
          "width": "stretch"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "$${if(Data.Price == null, '', Data.Price)}",
              "horizontalAlignment": "Right"
            }
          ],
          "width": "auto"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "speak": "${if(Data.Speak == null, '', Data.Speak)}"
}
