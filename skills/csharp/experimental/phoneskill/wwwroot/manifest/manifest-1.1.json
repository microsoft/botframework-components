{
  "$schema": "https://schemas.botframework.com/schemas/skills/skill-manifest-2.1.preview-0.json",
  "$id": "PhoneSkill",
  "name": "Phone Skill",
  "description": "The Phone experimental skill provides phone related capabilities and supports Office and Google contacts.",
  "publisherName": "Microsoft",
  "version": "0.8",
  "iconUrl": "https://{YOUR_SKILL_URL}/images/PhoneSkill.png",
  "copyright": "Copyright (c) Microsoft Corporation. All rights reserved.",
  "license": "",
  "privacyUrl": "https://{YOUR_SKILL_URL}/privacy.html",
  "tags": [
    "phone",
    "skill"
  ],
  "endpoints": [
    {
      "name": "production",
      "protocol": "BotFrameworkV3",
      "description": "Production endpoint for the Phone Skill",
      "endpointUrl": "https://{YOUR_SKILL_URL}/api/messages",
      "msAppId": "{YOUR_SKILL_APPID}"
    }
  ],
  "dispatchModels": {
    "languages": {
      "en-us": [
        {
          "id": "PhoneSkillLuModel-en",
          "name": "Phone LU (English)",
          "contentType": "application/lu",
          "url": "file://Phone.lu",
          "description": "English language model for the skill"
        }
      ]
    },
    "intents": {
      "OutgoingCall": "#/activities/message",
      "*": "#/activities/message"
    }
  },
  "activities": {
    "message": {
      "type": "message",
      "description": "Receives the users utterance and attempts to resolve it using the skill's LU models"
    },
    "outgoingcall": {
      "description": "Make a phone call",
      "type": "event",
      "name": "OutgoingCall",
      "value": {
        "$ref": "#/definitions/callInfo"
      },
      "resultValue": {
        "$ref": "#/definitions/actionResult"
      }
    }
  },
  "definitions": {
    "callInfo": {
      "type": "object",
      "properties": {
        "contactPerson": {
          "type": "string",
          "description": "A contact person"
        },
        "phoneNumber": {
          "type": "string",
          "description": "A phone number"
        }
      }
    },
    "actionResult": {
      "type": "object",
      "properties": {
        "actionSuccess": {
          "type": "bool",
          "description": "result of action"
        }
      }
    }
  }
}