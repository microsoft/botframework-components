# ShowTrending(Data, Cards, Layout)
[Activity
    Text = @{ShowTrending.Text(Data)}
    Speak = @{if(Data.Count > 1, ShowMultipleTrending.Speak(Data.Article.Name), ShowOneTrending.Speak(Data.Article.Description))}
]

# NoTrending(Data, Cards, Layout)
[Activity
    Text = @{NoTrending.Text(Data)}
    Speak = @{NoTrending.Text(Data)}
]