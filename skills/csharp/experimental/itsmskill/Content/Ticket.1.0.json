{
  "type": "AdaptiveCard",
  "id": "TicketCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "verticalContentAlignment": "Center",
              "items": [
                {
                  "type": "TextBlock",
                  "horizontalAlignment": "Left",
                  "size": "Medium",
                  "color": "Default",
                  "text": "${if(Data.Title == null, '', Data.Title)}",
                  "wrap": true
                }
              ],
              "width": "stretch"
            }
          ]
        },
        {
          "type": "TextBlock",
          "color": "Default",
          "text": "${if(Data.UrgencyLevel == null, '', Data.UrgencyLevel)}",
          "weight": "Bolder"
        },
        {
          "type": "TextBlock",
          "color": "Default",
          "text": "${if(Data.State == null, '', Data.State)}"
        },
        {
          "type": "TextBlock",
          "size": "Small",
          "color": "Default",
          "text": "${if(Data.OpenedTime == null, '', Data.OpenedTime)}"
        },
        {
          "type": "TextBlock",
          "size": "Small",
          "color": "Default",
          "text": "${if(Data.Number == null, '', Data.Number)}"
        }
      ]
    },
    {
      "type": "TextBlock",
      "wrap": true,
      "text": "${if(Data.Description == null, '', Data.Description)}",
      "maxLines": 5
    },
    {
      "separator": true,
      "type": "TextBlock",
      "wrap": true,
      "text": "${if(Data.ResolvedReason == null, '', Data.ResolvedReason)}",
      "maxLines": 5
    },
    {
      "type": "Container",
      "separator": true,
      "items": [
        {
          "type": "TextBlock",
          "horizontalAlignment": "Right",
          "size": "Small",
          "color": "default",
          "text": "${if(Data.ProviderDisplayText == null, '', Data.ProviderDisplayText)}"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "speak": "${if(Data.Speak == null, '', Data.Speak)}"
}

