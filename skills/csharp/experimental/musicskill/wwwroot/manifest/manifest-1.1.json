{
  "$schema": "https://schemas.botframework.com/schemas/skills/skill-manifest-2.1.preview-0.json",
  "$id": "MusicSkill",
  "name": "Music Skill",
  "description": "The Music Skill searches for music using Spotify",
  "publisherName": "Microsoft",
  "version": "0.8",
  "iconUrl": "https://{YOUR_SKILL_URL}/images/MusicSkill.png",
  "copyright": "Copyright (c) Microsoft Corporation. All rights reserved.",
  "license": "",
  "privacyUrl": "https://{YOUR_SKILL_URL}/privacy.html",
  "tags": [
    "music",
    "skill"
  ],
  "endpoints": [
    {
      "name": "production",
      "protocol": "BotFrameworkV3",
      "description": "Production endpoint for the Music Skill",
      "endpointUrl": "https://{YOUR_SKILL_URL}/api/messages",
      "msAppId": "{YOUR_SKILL_APPID}"
    }
  ],
  "dispatchModels": {
    "languages": {
      "en-us": [
        {
          "id": "MusicSkillLuModel-en",
          "name": "Music LU (English)",
          "contentType": "application/lu",
          "url": "https://raw.githubusercontent.com/microsoft/botframework-skills/master/skills/csharp/experimental/musicskill/Deployment/Resources/LU/en-us/MusicSkill.lu?token=AA6Q7FFBWLRMFW5YFWKJ6AC6NJ7JK",
          "description": "English language model for the skill"
        }
      ]
    },
    "intents": {
      "PlayMusic": "#/activities/message",
      "*": "#/activities/message"
    }
  },
  "activities": {
    "playMusic": {
      "description": "Play music",
      "type": "event",
      "name": "PlayMusic",
      "value": {
        "$ref": "#/definitions/searchInfo"
      },
      "resultValue": {
        "$ref": "#/definitions/operationStatus"
      }
    },
    "message": {
      "type": "message",
      "description": "Receives the users utterance and attempts to resolve it using the skill's LU models"
    }
  },
  "definitions": {
    "searchInfo": {
      "type": "object",
      "required": [],
      "properties": {
        "setting": {
          "type": "string",
          "description": "Information used to search the music catalogue, e.g. artist name"
        }
      }
    },
    "operationStatus": {
      "type": "object",
      "properties": {
        "status": {
          "type": "boolean",
          "description": "An operation status indicating success or failure"
        }
      }
    }
  }
}