{
  "type": "AdaptiveCard",
  "id": "PersonCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "Image",
          "horizontalAlignment": "Center",
          "url": "@{if(Data.IconPath == null, '', Data.IconPath)}",
          "size": "Large"
        },
        {
          "type": "TextBlock",
          "size": "ExtraLarge",
          "weight": "Bolder",
          "color": "Default",
          "text": "@{if(Data.Name == null, '', Data.Name)}"
        },
        {
          "type": "TextBlock",
          "size": "Large",
          "weight": "Bolder",
          "text": "@{if(Data.EntityTypeDisplayHint == null, '', Data.EntityTypeDisplayHint)}",
          "isSubtle": true,
          "color": "Default"
        },
        {
          "type": "TextBlock",
          "size": "Medium",
          "color": "Default",
          "text": "@{if(Data.Description == null, '', Data.Description)}",
          "wrap": true,
          "maxLines": 8
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "speak": "@{if(Data.Speak == null, '', Data.Speak)}"
}

