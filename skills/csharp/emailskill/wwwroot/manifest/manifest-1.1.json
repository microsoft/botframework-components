{
  "$schema": "https://schemas.botframework.com/schemas/skills/skill-manifest-2.1.preview-0.json",
  "$id": "EmailSkill",
  "name": "Email Skill",
  "description": "The Email skill provides email related capabilities and supports Office and Google calendars.",
  "publisherName": "Microsoft",
  "version": "0.8",
  "iconUrl": "https://{YOUR_SKILL_URL}/images/EmailSkill.png",
  "copyright": "Copyright (c) Microsoft Corporation. All rights reserved.",
  "license": "",
  "privacyUrl": "https://{YOUR_SKILL_URL}/privacy.html",
  "tags": [
    "email",
    "skill"
  ],
  "endpoints": [
    {
      "name": "production",
      "protocol": "BotFrameworkV3",
      "description": "Production endpoint for the Email Skill",
      "endpointUrl": "https://{YOUR_SKILL_URL}/api/messages",
      "msAppId": "{YOUR_SKILL_APPID}"
    }
  ],
  "dispatchModels": {
    "languages": {
      "en-us": [
        {
          "id": "EmailLuModel-en",
          "name": "EmailSkill LU (English)",
          "contentType": "application/lu",
          "url": "file://Email.lu",
          "description": "English language model for the skill"
        }
      ],
      "de-de": [
        {
          "id": "EmailLuModel-de",
          "name": "EmailSkill LU (German)",
          "contentType": "application/lu",
          "url": "file://Email.lu",
          "description": "German language model for the skill"
        }
      ],
      "es-es": [
        {
          "id": "EmailLuModel-es",
          "name": "EmailSkill LU (Spanish)",
          "contentType": "application/lu",
          "url": "file://Email.lu",
          "description": "Spanish language model for the skill"
        }
      ],
      "fr-fr": [
        {
          "id": "EmailLuModel-fr",
          "name": "EmailSkill LU (French)",
          "contentType": "application/lu",
          "url": "file://Email.lu",
          "description": "French language model for the skill"
        }
      ],
      "it-it": [
        {
          "id": "EmailLuModel-it",
          "name": "EmailSkill LU (Italian)",
          "contentType": "application/lu",
          "url": "file://Email.lu",
          "description": "Italian language model for the skill"
        }
      ],
      "zh-cn": [
        {
          "id": "EmailLuModel-zh",
          "name": "EmailSkill LU (Chinese)",
          "contentType": "application/lu",
          "url": "file://Email.lu",
          "description": "Chinese language model for the skill"
        }
      ]
    },
    "intents": {
      "SendEmail": "#/activities/message",
      "Forward": "#/activities/message",
      "Reply": "#/activities/message",
      "SearchMessages": "#/activities/message",
      "CheckMessages": "#/activities/message",
      "ReadAloud": "#/activities/message",
      "QueryLastText": "#/activities/message",
      "Delete": "#/activities/message",
      "*": "#/activities/message"
    }
  },
  "activities": {
    "createEvent": {
      "description": "Create a new event",
      "type": "event",
      "name": "CreateEvent",
      "value": {
        "$ref": "#/definitions/eventInfo"
      },
      "resultValue": {
        "$ref": "#/definitions/actionResult"
      }
    },
    "updateEvent": {
      "description": "Update the time of an existing event",
      "type": "event",
      "name": "UpdateEvent",
      "value": {
        "$ref": "#/definitions/updateEventInfo"
      },
      "resultValue": {
        "$ref": "#/definitions/actionResult"
      }
    },
    "showEvent": {
      "description": "Show an existing event",
      "type": "event",
      "name": "ShowEvent",
      "value": {
        "$ref": "#/definitions/chooseEventInfo"
      },
      "resultValue": {
        "$ref": "#/definitions/eventInfo"
      }
    },
    "acceptEvent": {
      "description": "Accept an existing event",
      "type": "event",
      "name": "AcceptEvent",
      "value": {
        "$ref": "#/definitions/chooseEventInfo"
      },
      "resultValue": {
        "$ref": "#/definitions/actionResult"
      }
    },
    "deleteEvent": {
      "description": "Delete(as organizer) or Decline(as invitee) an existing event",
      "type": "event",
      "name": "DeleteEvent",
      "value": {
        "$ref": "#/definitions/chooseEventInfo"
      },
      "resultValue": {
        "$ref": "#/definitions/actionResult"
      }
    },
    "joinEvent": {
      "description": "Join an existing event",
      "type": "event",
      "name": "JoinEvent",
      "value": {
        "$ref": "#/definitions/chooseEventInfo"
      },
      "resultValue": {
        "$ref": "#/definitions/actionResult"
      }
    },
    "timeRemaining": {
      "description": "Find out how long until a specific event",
      "type": "event",
      "name": "TimeRemaining",
      "value": {
        "$ref": "#/definitions/chooseEventInfo"
      },
      "resultValue": {
        "$ref": "#/definitions/timeRemainingOutput"
      }
    },
    "summary": {
      "description": "Retrieve a summary of meetings",
      "type": "event",
      "name": "Summary",
      "value": {
        "$ref": "#/definitions/dateInfo"
      },
      "resultValue": {
        "$ref": "#/definitions/eventSummary"
      }
    },
    "message": {
      "type": "message",
      "description": "Receives the user's utterance and attempts to resolve it using the skill's LU models"
    }
  },
  "definitions": {
    "eventInfo": {
      "type": "object",
      "required": [],
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the meeting"
        },
        "content": {
          "type": "string",
          "description": "Description of the meeting"
        },
        "attendees": {
          "type": "string",
          "description": "Semicolon separated list of email addresses to invite"
        },
        "startDate": {
          "type": "string",
          "description": "Start date of the meeting in yyyy-MM-dd format"
        },
        "startTime": {
          "type": "string",
          "description": "Start time of the meeting in HH:mm format"
        },
        "endDate": {
          "type": "string",
          "description": "End date of the meeting in yyyy-MM-dd format"
        },
        "endTime": {
          "type": "string",
          "description": "End time of the meeting in HH:mm format"
        },
        "duration": {
          "type": "number",
          "description": "The duration of the meeting in minutes"
        },
        "location": {
          "type": "string",
          "description": "The location for the meeting"
        },
        "timezone": {
          "type": "string",
          "description": "The timezone to create the meeting in"
        }
      }
    },
    "updateEventInfo": {
      "type": "object",
      "required": [],
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the meeting"
        },
        "startDate": {
          "type": "string",
          "description": "Current start date of the meeting in yyyy-MM-dd format"
        },
        "startTime": {
          "type": "string",
          "description": "Current start time of the meeting in HH:mm format"
        },
        "newStartDate": {
          "type": "string",
          "description": "New start date of the meeting in yyyy-MM-dd format"
        },
        "newStartTime": {
          "type": "string",
          "description": "New start time of the meeting in HH:mm format"
        },
        "moveTimeSpan": {
          "type": "number",
          "description": "Time to shift earlier or later in minutes"
        },
        "timezone": {
          "type": "string",
          "description": "The current user's timezone"
        }
      }
    },
    "chooseEventInfo": {
      "type": "object",
      "required": [],
      "properties": {
        "nextEvent": {
          "type": "boolean",
          "description": "Choose the Next meeting directly"
        },
        "title": {
          "type": "string",
          "description": "Title of the meeting"
        },
        "startDate": {
          "type": "string",
          "description": "Start date of the meeting in yyyy-MM-dd format"
        },
        "startTime": {
          "type": "string",
          "description": "Start time of the meeting in HH:mm format"
        },
        "timezone": {
          "type": "string",
          "description": "The current user's timezone"
        }
      }
    },
    "actionResult": {
      "type": "object",
      "properties": {
        "actionSuccess": {
          "type": "boolean",
          "description": "Result of action"
        }
      }
    },
    "timeRemainingOutput": {
      "type": "object",
      "properties": {
        "remainingTime": {
          "type": "number",
          "description": "The remaining time in minutes"
        }
      }
    },
    "dateInfo": {
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "description": "Date of the meetings in yyyy-MM-dd format"
        },
        "timezone": {
          "type": "string",
          "description": "The current user's timezone"
        }
      }
    },
    "eventSummary": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/eventInfo"
      }
    }
  }
}