# InitialChoicePrompt(Scenario, User, Items)
[Activity
    text = ${if($activePrompt != null, template($activePrompt), null)}
    attachments = ${json(ListCard(count($items), $pageSize, $pageItems, $templates.icon, $templates.title, $templates.item, $pageIndex + 1, $pageCount, Scenario))}
]

# RepromptChoicePrompt(Scenario, User, Items)
[Activity
    deliveryMode = update
    id = ${turn.activity.replyToId}
    attachments = ${json(ListCard(count($items), $pageSize, $pageItems, $templates.icon, $templates.title, $templates.item, $pageIndex + 1, $pageCount, Scenario))}
]

