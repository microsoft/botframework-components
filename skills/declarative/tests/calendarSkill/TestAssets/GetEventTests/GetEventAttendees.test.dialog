{
  "$schema": "https://raw.githubusercontent.com/microsoft/botbuilder-samples/main/experimental/generation/TestBot/TestBot/TestBot.schema",
  "$kind": "Microsoft.Test.Script",
  "httpRequestMocks": [
    "getProfile.mock",
    "getWorkingHours.mock",
    "getEvent.mock"
  ],
  "userTokenMocks": [
    "nomagiccode.mock"
  ],
  "dialog": "calendarskill",
  "script": [
    {
      "$kind": "Microsoft.Test.UserConversationUpdate",
      "membersAdded": [
        "Bot",
        "User"
      ],
      "membersRemoved": []
    },
    {
      "$kind": "Microsoft.Test.AssertReply",
      "assertions": [
        "attachments[0].contentType == 'application/vnd.microsoft.card.hero'",
        "attachments[0].content.text == '\r\nHi Megan Bowen üñê, thank you for helping out the Pre-built Experiences team with this dogfood for calendar skill!\r\n\r\nYou can ask the bot calendar related questions in this Teams chat modality (ps. other testing with modalities will follow like speaking to the bot).\r\n'"
      ]
    },
    {
      "$kind": "Microsoft.Test.UserSays",
      "text": "who is coming to my meeting tomorrow"
    },
    {
      "$kind": "Microsoft.Test.AssertReply",
      "text": "Here's what I found:",
      "assertions": [
        "attachments[0].contentType == 'application/vnd.microsoft.card.adaptive'"
      ],
      "description": "Event detail card response"
    }
  ]
}
