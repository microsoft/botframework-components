{
  "$schema": "https://raw.githubusercontent.com/microsoft/BotFramework-Composer/stable/Composer/packages/server/schemas/sdk.schema",
  "$kind": "Microsoft.Test.Script",
  "description": "update, clear, multi",
  "propertyMocks": [
    "settings.mock"
  ],
  "userTokenMocks": [
    "usertoken.mock"
  ],
  "httpRequestMocks": [
    "addtask.mock",
    "getlist.mock",
    "gettask.mock"
  ],
  "dialog": "ToDoSkill",
  "script": [
    {
      "$kind": "Microsoft.Test.UserConversationUpdate",
      "membersAdded": [
        "User"
      ]
    },
    {
      "$kind": "Microsoft.Test.AssertReplyOneOf",
      "text": [
        "Hello, I'm the Todo sample bot. What can I do for you today?"
      ]
    },
    {
      "$kind": "Microsoft.Test.UserSays",
      "text": "Add a task"
    },
    {
      "$kind": "Microsoft.Test.AssertReply",
      "text": "OK, what do you want to add?"
    },
    {
      "$kind": "Microsoft.Test.UserSays",
      "text": "buy milk"
    },
    {
      "$kind": "Microsoft.Test.AssertReply",
      "text": "Which list should I add **buy milk** to? (1) Shopping, (2) Grocery, or (3) To Do"
    },
    {
      "$kind": "Microsoft.Test.UserSays",
      "text": "update task to buy skirts"
    },
    {
      "$kind": "Microsoft.Test.AssertReply",
      "text": "OK, I've updated the task content to **buy skirts**"
    },
    {
      "$kind": "Microsoft.Test.AssertReply",
      "text": "Which list should I add **buy skirts** to? (1) Shopping, (2) Grocery, or (3) To Do"
    },
    {
      "$kind": "Microsoft.Test.UserSays",
      "text": "update task content"
    },
    {
      "$kind": "Microsoft.Test.AssertReply",
      "text": "OK, what do you want to add?"
    },
    {
      "$kind": "Microsoft.Test.UserSays",
      "text": "update topic to buy milk and add to todo list"
    },
    {
      "$kind": "Microsoft.Test.AssertReplyActivity",
      "assertions": [
        "attachments[0].contentType == 'application/vnd.microsoft.card.oauth'"
      ]
    },
    {
      "$kind": "Microsoft.Test.UserSays",
      "text": "000000"
    },
    {
      "$kind": "Microsoft.Test.AssertReply",
      "text": "I added buy milk to your To Do list."
    },
    {
      "$kind": "Microsoft.Test.AssertReply",
      "text": "Let me know if you want to add an item or mark one as complete."
    }
  ]
}
